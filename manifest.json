{
  "manifest_version": 3,
  "name": "Line Up Grabber",
  "version": "3.0.0",
  "description": "Made by MCGIPROD EC ADS1",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "tabs", "storage", "downloads"],
  "host_permissions": ["https://lyrics.mcgi.app/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy Lyrics",
    "default_icon": "song-lyrics.png"
  },
  "icons": {
    "128": "song-lyrics.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
